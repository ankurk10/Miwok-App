<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7DA"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/numbers"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:background="#FD8E09"
        android:gravity="center|left"
        android:text="Numbers"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBar" />

    <TextView
        android:id="@+id/family"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:background="#379237"
        android:gravity="center"
        android:text="Familiy Members"
        android:textAlignment="viewStart"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numbers" />

    <TextView
        android:id="@+id/colors"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:background="#8800A0"
        android:gravity="center|left"
        android:text="Colors"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/family" />

    <TextView
        android:id="@+id/list4"
        android:layout_width="0dp"
        android:layout_height="88dp"
        android:background="#16AFCA"
        android:gravity="center|left"
        android:text="Phrases"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colors" />

</androidx.constraintlayout.widget.ConstraintLayout>